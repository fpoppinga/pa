%       \pgfpathlineto{\pgfpoint{0pt}{-15pt}}%
      \pgfpathclose%
      \pgfusepath{stroke,fill}%
    \end{pgfpicture}%
  \end{beamercolorbox}%
}


\defbeamertemplate*{frametitle}{hsuant}[1][left]
{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \begin{beamercolorbox}[sep=0.3cm,#1,wd=\the\@tempdima]{frametitle}
    \def\boxheight{2.5em} % Höhe der parboxen für 2 Zeilen Folientitel
    \parbox[c][\boxheight]{.75\linewidth}%
    {%
      {\raggedright\usebeamerfont{frametitle}\insertframetitle\\}%
      {%
        \ifx\insertframesubtitle\@empty%
        \else%
        {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\par}%
        \fi
      }%
    }%
    \hfill%
    \parbox[c][\boxheight]{.25\linewidth}%
    {%
      \begin{flushright} % rechtsbündig
        \pgfuseimage{HSU-logo_farbe_klein}%
      \end{flushright}%
    }%
    \par%
    \parbox[c][1pt]{.75\linewidth}{\rule[0pt]{\linewidth}{.7pt}}%
  \end{beamercolorbox}%
}

